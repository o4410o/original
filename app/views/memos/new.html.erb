<div class="form">
    <h2 class="edit-title">商品の情報を入力</h2>
    <%= form_with(model: @memo, local: true) do |form| %>
    <div class="form-input">
      <div class="item-name"><%= form.text_area :item, placeholder: "商品名", style: "border: none", :size=>"25*20" %></div>
      <div class="item-text"><%= form.text_area :text, placeholder: "追加メモ", style: "border: none", :size=>"25*20" %></div>
    </div> 
      <div class="form-submit"><%= form.submit "追加" %></div>
    <% end %>
</div>
